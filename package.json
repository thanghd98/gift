{
  "version": "4.3.0",
  "license": "MIT",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "name": "gift-sdk",
  "author": "thanghoduc",
  "size-limit": [
    {
      "path": "dist/gift-sdk.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/gift-sdk.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^11.1.4",
    "husky": "^9.1.4",
    "size-limit": "^11.1.4",
    "tsdx": "^0.14.1",
    "tslib": "^2.6.3",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@wallet/core": "3.0.9",
    "axios": "^1.7.4",
    "ethers": "^5.7.1",
    "js-big-decimal": "^1.4.1",
    "numbro": "^2.3.1"
  }
}
